<?xml version="1.0"?>
<robot name="self_balancing_robot"
  xmlns:xacro="http://www.ros.org/wiki/xacro">

  <!-- Macro for color -->
  <xacro:macro name="material_with_color" params="name color">
    <material name="${name}">
      <color rgba="${color}"/>
    </material>
  </xacro:macro>

  <link name="dummy_root_link">
    <visual>
      <geometry>
        <sphere radius="0.01"/>
      </geometry>
      <material name="Invisible">
        <color rgba="0 0 0 0"/>
      </material>
    </visual>
  </link>

  <!-- Fixed Joint from Dummy Link to Base Link -->
  <joint name="dummy_to_base_joint" type="fixed">
    <parent link="dummy_root_link"/>
    <child link="base_link"/>
    <origin xyz="0 0 0" rpy="0 0 0"/>
  </joint>

  <!-- Robot Base -->
  <link name="base_link">
    <inertial>
      <origin xyz="0 0 0" />
      <mass value="1.5" />
      <inertia ixx="0.01" ixy="0.0" ixz="0.0" iyy="0.01" iyz="0.0" izz="0.02" />
    </inertial>
    <visual>
      <origin xyz="0 0 0" />
      <geometry>
        <box size="0.2 0.1 0.4" />
      </geometry>
      <xacro:material_with_color name="Green" color="0 1 0 1" />
    </visual>
    <collision>
      <origin xyz="0 0 0" />
      <geometry>
        <box size="0.2 0.1 0.4" />
      </geometry>
    </collision>
  </link>

  <!-- Left Wheel -->
  <link name="left_wheel">
    <inertial>
      <origin xyz="0 0 0" />
      <mass value="0.3" />
      <inertia ixx="0.005" ixy="0.0" ixz="0.0" iyy="0.005" iyz="0.0" izz="0.01" />
    </inertial>
    <visual>
      <geometry>
        <cylinder radius="0.05" length="0.02" />
      </geometry>
      <xacro:material_with_color name="Black" color="0 0 0 1" />
    </visual>
    <collision>
      <geometry>
        <cylinder radius="0.05" length="0.02" />
      </geometry>
    </collision>
  </link>

  <!-- Right Wheel -->
  <link name="right_wheel">
    <inertial>
      <origin xyz="0 0 0" />
      <mass value="0.3" />
      <inertia ixx="0.005" ixy="0.0" ixz="0.0" iyy="0.005" iyz="0.0" izz="0.01" />
    </inertial>
    <visual>
      <geometry>
        <cylinder radius="0.05" length="0.02" />
      </geometry>
      <xacro:material_with_color name="Black" color="0 0 0 1" />
    </visual>
    <collision>
      <geometry>
        <cylinder radius="0.05" length="0.02" />
      </geometry>
    </collision>
  </link>

  <!-- Joint Definitions -->

  <!-- Left Wheel Joint -->
  <joint name="left_wheel_joint" type="revolute">
    <parent link="base_link"/>
    <child link="left_wheel"/>
    <origin xyz="0.11 0.0 -0.2" rpy="0 1.57 0"/>
    <axis xyz="0 0 1"/>
  </joint>

  <!-- Right Wheel Joint -->
  <joint name="right_wheel_joint" type="revolute">
    <parent link="base_link"/>
    <child link="right_wheel"/>
    <origin xyz="-0.11 0.0 -0.2" rpy="0 1.57 0"/>
    <axis xyz="0 0 1"/>
  </joint>

  <transmission name="left_wheel_transmission">
    <type>transmission_interface/SimpleTransmission</type>
    <joint name="left_wheel_joint">
      <hardwareInterface>hardware_interface/VelocityJointInterface</hardwareInterface>
    </joint>
    <actuator name="left_wheel_motor">
      <hardwareInterface>hardware_interface/VelocityJointInterface</hardwareInterface>
    </actuator>
    <mechanicalReduction>1.0</mechanicalReduction>
  </transmission>

  <transmission name="right_wheel_transmission">
    <type>transmission_interface/SimpleTransmission</type>
    <joint name="right_wheel_joint">
      <hardwareInterface>hardware_interface/VelocityJointInterface</hardwareInterface>
    </joint>
    <actuator name="right_wheel_motor">
      <hardwareInterface>hardware_interface/VelocityJointInterface</hardwareInterface>
    </actuator>
    <mechanicalReduction>1.0</mechanicalReduction>
  </transmission>

</robot>
