<?xml version="1.0"?>
<robot name="self_balancing_robot">

  <!-- Robot Base -->
  <link name="base_link">
    <inertial>
      <origin xyz="0 0 0" />
      <mass value="1.5" />
      <inertia ixx="0.01" ixy="0.0" ixz="0.0" iyy="0.01" iyz="0.0" izz="0.02" />
    </inertial>
    <visual>
      <origin xyz="0 0 0.1" />
      <geometry>
        <box size="0.2 0.1 0.4" />
      </geometry>
      <material name="Green">
        <color rgba="0 1 0 1"/>
      </material>
    </visual>
    <collision>
      <origin xyz="0 0 0.1" />
      <geometry>
        <box size="0.2 0.1 0.4" />
      </geometry>
    </collision>
  </link>

  <!-- Left Wheel -->
  <link name="left_wheel">
    <inertial>
      <origin xyz="0 0 0" />
      <mass value="0.3" />
      <inertia ixx="0.005" ixy="0.0" ixz="0.0" iyy="0.005" iyz="0.0" izz="0.01" />
    </inertial>
    <visual>
      <geometry>
        <cylinder radius="0.05" length="0.02" />
      </geometry>
      <material name="Black">
        <color rgba="0 0 0 1"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <cylinder radius="0.05" length="0.02" />
      </geometry>
    </collision>
  </link>

  <!-- Right Wheel -->
  <link name="right_wheel">
    <inertial>
      <origin xyz="0 0 0" />
      <mass value="0.3" />
      <inertia ixx="0.005" ixy="0.0" ixz="0.0" iyy="0.005" iyz="0.0" izz="0.01" />
    </inertial>
    <visual>
      <geometry>
        <cylinder radius="0.05" length="0.02" />
      </geometry>
      <material name="Black">
        <color rgba="0 0 0 1"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <cylinder radius="0.05" length="0.02" />
      </geometry>
    </collision>
  </link>

  <!-- Joint Definitions -->

  <!-- Left Wheel Joint -->
  <joint name="left_wheel_joint" type="continuous">
    <parent link="base_link"/>
    <child link="left_wheel"/>
    <origin xyz="0.1 0.1 0" rpy="0 1.57 0"/>
    <axis xyz="0 0 1"/>
  </joint>

  <!-- Right Wheel Joint -->
  <joint name="right_wheel_joint" type="continuous">
    <parent link="base_link"/>
    <child link="right_wheel"/>
    <origin xyz="0.1 -0.1 0" rpy="0 1.57 0"/>
    <axis xyz="0 0 1"/>
  </joint>

</robot>
